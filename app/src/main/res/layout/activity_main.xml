<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/beige"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Gra w kości. Autor: Jakub Kubiak"
        android:textSize="27dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/rollDice"
        android:text="RZUĆ KOŚĆMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/chocolate"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp">

        <TextView
            android:id="@+id/kosc1"
            android:text=" ? "
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/kosc2"
            android:text=" ? "
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/kosc3"
            android:text=" ? "
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/kosc4"
            android:text=" ? "
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/kosc5"
            android:text=" ? "
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="9dp"
            android:background="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/wyniklos"
        android:text="Wynik tego losowania: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wynikgry"
        android:text="Wynik gry: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/liczbarzut"
        android:text="Liczba rzutów: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/resetGame"
        android:text="RESETUJ WYNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:backgroundTint="@color/chocolate" />
</LinearLayout>